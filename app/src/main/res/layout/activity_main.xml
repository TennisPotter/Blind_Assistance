<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/bli_dark"
    tools:context=".MainActivity">

    <!-- App Title (Top Center) -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Blind Assistance"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:paddingTop="40dp"
        android:paddingBottom="35dp" />

    <!-- Centered Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_object_detection"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸ”Ž OBJECT DETECTION"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="14dp"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸ§­ NAVIGATION"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="14dp"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_document_reader"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸ“„ DOCUMENT READER"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:layout_marginBottom="14dp"
            android:padding="10dp" />
    </LinearLayout>

    <!-- Mic Button (Bottom Center) -->
    <ImageButton
        android:id="@+id/btn_mic"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent"
        android:contentDescription="Voice Command"
        android:src="@drawable/mic" />

</LinearLayout>
